{
  "compilerOptions": {
    "charset": "utf8",
    "declaration": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "listEmittedFiles": true,
    "listFiles": true,
    "outDir": "lib",
    "strict": true,
    "target": "es6"
  },
  "include": [
    "src/main/**/*",
    "src/test/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/test/**/*"
  ]
}
